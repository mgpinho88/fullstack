<%- include('../partials/header') %>
<%- include('../partials/nav') %>
<div class="container">
    <h1>Add New Item</h1>
    <form action="/shop/<%=product._id%>?_method=PUT" method="post">
        <div class="card">
            <div class="card-content">
                <div class="field">
                    <label class="label" for="name">Product Name:</label>
                    <div class="control">
                        <input class="input" type="text" name="name" id="name" value="<%= product.name %>">
                    </div>
                </div>

                <div class="field">
                    <label class="label" for="price">Product Price:</label>
                    <div class="control">
                        <input class="input" type="number" step="0.01" name="price" id="price" value="<%= product.price %>">
                    </div>
                </div>

                <div class="field">
                    <label class="label" for="category">Subject</label>
                    <div class="control">
                        <div class="select">
                            <select name="category" id="category" value="<%= product.category %>">
                                <% for (let category of Categories) { %>
                                    <option value="<%= category %>" <%= product.category === category ? 'selected': '' %>><%= category %></option> 
                                <% }; %>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            
            <footer class="card-footer">
                <button class="card-footer-item">Submit</button>
            </footer>
        </div>
    </form>

</div>
<%- include('../partials/footer') %>