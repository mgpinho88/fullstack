<% layout('layouts/boilerplate') %>

<h1>List of camps</h1>

<div>
  <a href="/campgrounds/new">Create a New Campground!</a>
</div>

  <% for (let camp of camps) { %>
    <div class="card mb-3" style="max-width: 2560px">
      <div class="row g-0">
        
        <div class="col-md-4">
          <img src="<%= camp.image %>" class="img-fluid " alt="camp">
        </div>
        
        <div class="col-md-8">
          <div class="card-body">
            <!-- Card Heading -->
            <h5 class="card-title"><%= camp.title %></h5>
            <h6 class="card-subtitle mb-2 text-body-secondary"><%= camp.location %></h6>
            <!-- Card Content-->
            <p class="card-text"><%= camp.description %></p>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Price: $<%= camp.price %>/night</li>
            </ul>
            <!-- Card Footer -->
            <div class="card-footer bg-white mt-auto">
              <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">See More</a>
            </div>
          </div>
        </div>
      </div>
    </div>    
  <% } %>  
