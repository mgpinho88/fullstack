<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">Update</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="post">
      
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" name="title" id="title" placeholder="<%= camp.title %>">
        <div class="form-text" id="basic-addon4">Campground</div>
      </div>
      
      <div class="mb-3">
        <label class="form-lable" for="location">Location</label>
        <input class="form-control" type="text" name="location" id="location" placeholder="Location">
      </div>
      
      <div class="mb-3">
        <label class="form-lable" for="price">Price</label>
        <div class="input-group mb-3">
          <span class="input-group-text">$</span>
          <input class="form-control" type="text" name="price" id="price" placeholder="<%= camp.price %>" aria-label="Amount (to the nearest dollar)">
          <span class="input-group-text">.00</span>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-lable" for="description">Description</label>
        <input class="form-control" type="text" name="description" id="description" placeholder="<%= camp.description %>">
      </div>

      <button class="btn btn-primary" type="submit">Submit New Campground</button>
    </form>

    <div class="mt-3">
      <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">Go Back</a>
    </div>    
  </div>
</div>