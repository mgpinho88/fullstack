<% layout('layouts/boilerplate') %>

<form action="/campgrounds/<%= camp._id %>?_method=PUT" method="post">
  <div>
    <label for="title">Title</label>
    <input type="text" name="title" id="title" placeholder="<%= camp.title %>">
  </div>
  
  <div>
    <label for="location">Location</label>
    <input type="text" name="location" id="location" placeholder="<%= camp.location %>">
  </div>
  
  <button type="submit">Update Campground</button>
</form>  

<a href="/campgrounds/<%= camp._id %>">Go Back</a>